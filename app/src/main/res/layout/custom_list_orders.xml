<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/namep_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:layout_weight="1"
        android:text="Name"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/pricep_txt"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_weight="1"
        android:text="Price"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/qtyp_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/qtyp_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="31dp"
        android:layout_weight="1"
        android:text="Qty"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/namep_txt"
        app:layout_constraintEnd_toStartOf="@+id/totp_txt"
        app:layout_constraintStart_toEndOf="@+id/pricep_txt"
        app:layout_constraintTop_toTopOf="@+id/pricep_txt"></TextView>

    <TextView
        android:id="@+id/totp_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:text="Total"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/qtyp_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/qtyp_txt"
        app:layout_constraintTop_toTopOf="@+id/qtyp_txt"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>